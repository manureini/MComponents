@if (Wizard != null && !Wizard.FreezeCurrentStep)
{
    <button class="m-wizard-btn m-btn m-btn-primary m-btn-md m-btn-tall m-btn-wide" data-action="next" @attributes="AdditionalAttributes" @onclick="Wizard.OnNextClicked">
        Weiter
    </button>
}

@code  {

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> AdditionalAttributes { get; set; }

    [CascadingParameter]
    public MWizard Wizard { get; set; }

}
